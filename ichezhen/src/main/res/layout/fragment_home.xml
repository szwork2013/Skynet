<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <fragment
        android:name="com.okar.icz.fragments.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home"
        android:tag="home"
        />

    <ImageView
        style="@style/PostTopicRoundBtn"
        android:src="@drawable/icon_create_posts"
        android:id="@+id/select_post_topic"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/green_round_bg"
        />

    <RelativeLayout
        android:id="@+id/select_post_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeffffff"
        android:visibility="gone">

        <ImageView
            style="@style/PostTopicRoundBtn"
            android:id="@+id/post_tw_btn"
            android:src="@drawable/icon_create_question"
            android:background="@drawable/yellow_round_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提问"
            android:textSize="13sp"
            android:textColor="#383838"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp" />

        <ImageView
            style="@style/PostTopicRoundBtn"
            android:id="@+id/post_topic_btn"
            android:src="@drawable/icon_create_dynamic"
            android:background="@drawable/green_round_bg"
            android:layout_alignTop="@+id/post_tw_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发帖"
            android:id="@+id/textView5"
            android:textSize="13sp"
            android:textColor="#383838"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/post_topic_btn"
            android:layout_alignStart="@+id/post_topic_btn"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            />

        <ImageView
            style="@style/PostTopicRoundBtn"
            android:id="@+id/post_tj_btn"
            android:src="@drawable/icon_create_wanted"
            android:background="@drawable/red_round_bg"
            android:layout_alignTop="@+id/post_tw_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通缉"
            android:id="@+id/textView6"
            android:textSize="13sp"
            android:textColor="#383838"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignRight="@+id/post_tj_btn"
            android:layout_alignEnd="@+id/post_tj_btn"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"/>
    </RelativeLayout>
</RelativeLayout>