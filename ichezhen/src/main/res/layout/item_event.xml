<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_box_padding">

    <ImageView
        style="@style/EventItemCoverStyle"
        android:id="@+id/ei_cover_iv"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ei_name_tv"
        android:layout_alignTop="@+id/ei_cover_iv"
        android:layout_toRightOf="@+id/ei_cover_iv"
        android:layout_toEndOf="@+id/ei_cover_iv"
        android:layout_marginLeft="5dp"
        style="@style/Label.DefLabel1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ei_submit_time_tv"
        android:layout_below="@+id/ei_name_tv"
        android:layout_toRightOf="@+id/ei_cover_iv"
        android:layout_toEndOf="@+id/ei_cover_iv"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        style="@style/Label.DefLabel1.h3" />

</RelativeLayout>