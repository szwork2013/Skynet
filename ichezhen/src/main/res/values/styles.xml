<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="AppBaseTheme"  parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBaseThemeMain"  parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 自定义ActionBar样式，重设ActionBar背景，隐藏actionbar左侧的应用图标和标题 -->
    <style name="DefActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">#ffffff</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <item name="android:displayOptions">useLogo</item>
    </style>

    <!-- 自定义窗口样式，需要带ActionBar -->
    <style name="IczActionBar" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/DefActionBarStyle</item>
    </style>

    <style name="MyDialogTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bisque</item>
    </style>

    <style name="MyDialogTxt">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDialogBtn">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/dialog_btn_bg</item>
    </style>

    <style name="MyInputStyle">
        <item name="android:textColor">#333</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="ActionBarProgress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:progressDrawable">@drawable/progressbarclor</item>

    </style>

    <style name="IczTitleBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">63.0dp</item>
        <item name="android:background">@color/icz_green</item>
    </style>

    <style name="Title">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BackIcn">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label.DefLabel1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label.DefLabel1.h1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Label.DefLabel1.h2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label.DefLabel1.h3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/darkgray</item>
    </style>

    <style name="MemberHeadSingleton">
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:background">@color/appDefImgBackgroundColor</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>

    <style name="MsgHead">
        <item name="android:layout_width">45sp</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:background">@color/appDefImgBackgroundColor</item>
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="Label.DefLabel1.MsgText">
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="Label.DefLabel1.MemberNickname">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginRight">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 编辑器 -->

    <style name="SendTextEditBtmConStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">66dp</item>
    </style>

    <style name="SendTextEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginRight">100dp</item>
    </style>

    <style name="SendTextBtnStyle">
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- 公用的按钮样式 -->
    <style name="DefNormalBtnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/def_btn_bg</item>
    </style>
    
    <style name="DefNormalBtnStyle.NoSelectNtnStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">#808080</item>
    </style>

    <!-- 公用提示信息 -->
    <style name="DefMessageStyle">
        <item name="android:textColor">#65779c</item>
        <item name="android:textSize">13sp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <!-- index -->
    <style name="IndexBtmItem">
        <item name="android:background">@null</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 登陆页 -->

    <style name="BaseText.ItemTitleStyle">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="BaseText.ItemTitleStyle.ItemTitleGrayStyle">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="ItemCoverStyle">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/base_grey</item>
    </style>

    <!-- 设置dialog弹出，退出动画 -->

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!-- 活动列表样式 -->
    <style name="EventItemCoverStyle" parent="ItemCoverStyle">

    </style>

    <style name="Text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItemUserName" parent="Text">
        <item name="android:textColor">#596688</item>
    </style>

    <style name="ItemUserInfo" parent="Text">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ItemTime" parent="Text">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="ItemFootText" parent="Text">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="PostTopicRoundBtn">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="SubmitBtn">
        <item name="android:background">@drawable/submit_btn_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#585858</item>
    </style>

    <style name="Msg">
        <item name="android:textColor">#C2BEBE</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Input">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textColorHint">#C2BEBE</item>
        <item name="android:textColor">#C2BEBE</item>
        <item name="android:padding">8dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="ItemImages">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">#eee</item>
    </style>

    <style name="Content">
        <item name="android:textColor">#383838</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
