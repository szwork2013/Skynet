<resources>

    <!-- Base application theme. -->
    <style name="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/appBackgroundColor</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TopBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BackIcn">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label.DefLabel1">
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MemberHeadSingleton">
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:background">@color/appDefImgBackgroundColor</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>

    <style name="MsgHead">
        <item name="android:src">@drawable/icon80_avatar_default</item>
        <item name="android:layout_width">45sp</item>
        <item name="android:layout_height">45sp</item>
        <item name="android:background">@color/appDefImgBackgroundColor</item>
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="Label.DefLabel1.MsgText">
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="Label.DefLabel1.MemberNickname">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginRight">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 编辑器 -->

    <style name="SendTextEditBtmConStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">66dp</item>
    </style>

    <style name="SendTextEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginRight">100dp</item>
    </style>

    <style name="SendTextBtnStyle">
        <item name="android:text">@string/send</item>
        <item name="android:layout_width">92dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- 自定义ActionBar样式，重设ActionBar背景，隐藏actionbar左侧的应用图标和标题 -->
    <style name="actionbar_def_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!-- 在样式里面直接替换掉actionbar的背景，避免在有的窗口进入慢时导致进入时显示系统默认的actionbar -->
        <item name="android:background">@color/black</item>
        <!-- 在样式里面去掉acionbar的应用图标和标题 -->
        <item name="android:displayOptions">useLogo</item>
    </style>

    <!-- 自定义窗口样式，需要带ActionBar -->
    <style name="IczActionBar" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/actionbar_def_style</item>
    </style>

    <style name="IndexBtmItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
